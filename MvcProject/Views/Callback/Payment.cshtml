@model MvcProject.Models.Model.Deposit
@{
    ViewData["Title"] = "Complete Your Payment";
}
<h1>Complete Your Payment</h1>
<p>Transaction ID: @Model.TransactionID</p>
<p>Amount: @Model.Amount</p>
<div class="container mt-5">
    <h2 class="text-center">Complete Your Payment</h2>
    <div class="card mx-auto mt-4" style="max-width: 500px;">
        <div class="card-body">
            <p><strong>Transaction ID:</strong> @Model.TransactionID</p>
            <p><strong>Amount:</strong> $@(Model.Amount)</p>
            <p><strong>Merchant ID:</strong> @Model.MerchantID</p>

            <form asp-action="SuccessDeposit" asp-controller="Callback" method="post">
                <input type="hidden" name="TransactionID" value="@Model.TransactionID" />
                <input type="hidden" name="Amount" value="@Model.Amount" />
                <input type="hidden" name="MerchantID" value="@Model.MerchantID" />
                <button type="submit" class="btn btn-primary w-100">Complete Payment</button>
            </form>
        </div>
    </div>
    </div>
